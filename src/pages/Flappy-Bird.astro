---
import Layout from "../layouts/Layout.astro";
---

<script src="/src/scripts/happy-bird.js"></script>
<Layout
    title="AmbiTrack - Flappy Bird"
    description="Reporta incidentes ambientales para revisiÃ³n interna."
    class="flappy-bird-page"
    showGrid={false}
    showFooter={false}
>
    <div id="container" style="width:100vw; height:100vh; margin:0; padding:0;">
        <canvas id="board" style="display:block; width:100vw; height:100vh;"></canvas>
    </div>
</Layout>
<style>
    .text-not {
        display: none;
    }
    @media (width < 1200px) {
        .text-not {
            display: block;
        }
        #board {
            display: none;
        }
    }
    #board {
    }
</style>
<style>
    .flappy-bird-page .cuadricula {
        display: none !important;
    }
    .flappy-bird-page footer,
    .flappy-bird-page #p-hidden,
    .flappy-bird-page #main-hidden {
        display: none !important;
    }
</style>
<script is:inline>
    document.addEventListener('astro:page-load', () => {
        const grid = document.querySelector('.cuadricula');
        if (grid) grid.style.display = 'none';
        ['footer', '#p-hidden', '#main-hidden'].forEach(selector => {
            const el = document.querySelector(selector);
            if (el) el.style.display = 'none';
        });
    });
</script>
